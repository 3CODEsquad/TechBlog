@model IEnumerable<TechBlog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>My Posts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            Likes
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Author != null && User.Identity.Name == item.Author.UserName)
        {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.Title)
          
            </td>
            <td>

                    @Html.Raw(TechBlog.Classes.Utils.CutText(item.Body))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostLike) likes <br />
                @*@if (User.IsInRole("Administrators") || (item.Author != null && User.Identity.Name == item.Author.UserName))
            {*@

                    @Html.ActionLink("Like", "Like", new { id = item.Id })
            @*}*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @*@if (User.IsInRole("Administrators") || (item.Author != null && User.Identity.Name == item.Author.UserName))
            {*@
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @*}*@

                @Html.ActionLink("Details", "Details", new { id = item.Id })

                @*@if (User.IsInRole("Administrators") || (item.Author != null && User.Identity.Name == item.Author.UserName))
            {*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            @* } *@
            </td>
        </tr>
            }
        }

</table>
